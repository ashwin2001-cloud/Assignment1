    <h2>SignUp Form</h2>
    <form action="/users/createUser" method="POST">
        <input type="text" name="name" placeholder="Full Name">
        <input type="email" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Your Password">

        <br>
        <p>Please select your radio option:</p>
        <input type="radio" name="radio" value="1">
        <label for="1">1</label><br>
        <input type="radio" name="radio" value="2">
        <label for="2">2</label><br>
        <input type="radio" name="radio" value="3">
        <label for="3">3</label><br><br>

        <input type="checkbox" id="checkbox" name="checkbox" value="true">
        <label for="checkbox">Are You a member?</label> <br>

        <label for="time">Enter (date and time):</label>
        <input type="datetime-local" name="time">

        <br>
        <label for="number">Enter (between 0 and 50):</label>
        <input type="range" name="number" min="0" max="50">

        <br>
        <label for="selection">Choose a number:</label>
        <select name="selection">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>

        <br>
        <input type="submit" value="SignUp">
    </form>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
