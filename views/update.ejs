    <h1>Update</h1>
    <form action="/users/updateUser" method="POST">

        <br>
        <p>Please select your radio option:</p>
        <% for(let i=1;i<=3;i++){ %>
            <% if(user.radio==i){ %>
                <input type="radio" name="radio" value="<%=i%>" checked>
                <label for="<%=i%>"><%=i%></label><br>
            <% }else { %>
                <input type="radio" name="radio" value="<%=i%>">
                <label for="<%=i%>"><%=i%></label><br>
            <% } %>
        <% } %>
        
        <br>
        
        <% if(user.checkbox=='on'){ %>
            <input type="checkbox" id="checkbox" name="checkbox" value="on" checked>
            <label for="checkbox">Are You a member?</label> <br>
        <% }else{ %>
            <input type="checkbox" id="checkbox" name="checkbox" value="on">
            <label for="checkbox">Are You a member?</label> <br>
        <% } %>

        <br>

        <label for="time">Current time- <%= user.time %>:</label><br>
        <input type="datetime-local" id="time" name="time" required>

        <br><br>
        <label for="number">Enter (between 0 and 50):</label>
        <input type="range" name="number" min="0" max="50" value="<%=user.number%>">

        <br><br>
        <label for="selection">Choose a number:</label>
        <select name="selection">
            <% for(let i=1;i<=3;i++){ %>
            <% if(user.selection==i){ %>
                <option value="<%=i%>" selected><%=i%></option>
            <% }else { %>
                <option value="<%=i%>"><%=i%></option>
            <% } %>
        <% } %>
        </select>

        <br><br>
        <input type="submit" value="Update">
    </form>
